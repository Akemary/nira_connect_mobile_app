<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@color/light_gray">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Application Status"
                android:textColor="@color/uganda_red"
                android:textSize="22sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Track Your National ID Application"
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="12dp"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/light_gray"
                android:layout_marginBottom="12dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Enter your tracking number or NIN to check your application status."
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="center"/>
        </LinearLayout>

        <!-- Search Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Search Application"
                android:textColor="#1a237e"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Tracking Number -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tracking Number"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etTrackingNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your tracking number"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:layout_marginBottom="16dp"/>

            <!-- OR Separator -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="16dp">

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/light_gray"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="OR"
                    android:textColor="@color/text_secondary"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1"
                    android:background="@color/light_gray"/>
            </LinearLayout>

            <!-- NIN -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="National Identification Number (NIN)"
                android:textColor="@color/text_primary"
                android:textSize="14sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <EditText
                android:id="@+id/etNin"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your NIN"
                android:textSize="14sp"
                android:padding="12dp"
                android:background="@drawable/edit_text_background"
                android:inputType="number"
                android:layout_marginBottom="16dp"/>

            <!-- Check Status Button -->
            <Button
                android:id="@+id/btnCheckStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Check Status"
                android:textSize="16sp"
                android:textStyle="bold"
                android:padding="16dp"
                android:background="@color/status_pending"
                android:textColor="@color/white"/>

        </LinearLayout>

        <!-- Status Results -->
        <LinearLayout
            android:id="@+id/statusLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/white"
            android:padding="20dp"
            android:layout_marginBottom="16dp"
            android:elevation="4dp"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application Status"
                android:textColor="@color/text_primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="16dp"/>

            <!-- Current Status -->
            <TextView
                android:id="@+id/tvStatusTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Application Received"
                android:textColor="@color/status_pending"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:id="@+id/tvStatusDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Your application has been received and is awaiting initial review."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="16dp"/>

            <!-- Progress Timeline -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="16dp">

                <!-- Step 1: Application Received -->
                <LinearLayout
                    android:id="@+id/progressStep1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/presence_online"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Application Received"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Step 2: Under Review -->
                <LinearLayout
                    android:id="@+id/progressStep2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/presence_online"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Under Review"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Step 3: Processing -->
                <LinearLayout
                    android:id="@+id/progressStep3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/presence_online"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Processing"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Step 4: Ready for Collection -->
                <LinearLayout
                    android:id="@+id/progressStep4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/presence_online"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Ready for Collection"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>

                <!-- Step 5: Completed -->
                <LinearLayout
                    android:id="@+id/progressStep5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@android:drawable/presence_online"
                        android:layout_marginEnd="12dp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Completed"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"/>
                </LinearLayout>
            </LinearLayout>

            <!-- Last Update -->
            <TextView
                android:id="@+id/tvLastUpdate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Last updated: 01/01/2024 10:30"
                android:textColor="@color/text_secondary"
                android:textSize="12sp"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <!-- Support Button -->
            <Button
                android:id="@+id/btnContactSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Support for Help"
                android:textSize="14sp"
                android:padding="12dp"
                android:backgroundTint="@color/status_pending"
                android:textColor="@color/primary_color"/>

        </LinearLayout>

        <!-- Help Card -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/card_blue_light"
            android:padding="20dp"
            android:elevation="4dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Need Help?"
                android:textColor="#1a237e"
                android:textSize="16sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="8dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If you're experiencing issues with your application status, please contact our support team for assistance."
                android:textColor="@color/text_secondary"
                android:textSize="14sp"
                android:gravity="center"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="12dp"/>

            <Button
                android:id="@+id/btnHelpContactSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Contact Support"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="12dp"
                android:background="@drawable/button_outline"
                android:textColor="@color/primary_color"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>