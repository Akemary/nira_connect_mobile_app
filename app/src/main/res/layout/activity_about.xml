<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray_200">

    <!-- Header with Red Background - Fixed at top -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/header_gradient"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:elevation="8dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NIRA Connect"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold"/>

        <View android:layout_width="0dp" android:layout_height="0dp" android:layout_weight="1"/>

    </LinearLayout>

    <!-- Content Area with ScrollView -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- About NIRA Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About NIRA"
                    android:textColor="@color/uganda_red"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The National Identification and Registration Authority (NIRA) is established by the Registration of Persons Act, 2015. NIRA is responsible for the registration of persons and citizens in Uganda."
                    android:textColor="@color/gray_800"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Mission"
                    android:textColor="@color/uganda_red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <!-- The red underline bar -->
                <View
                    android:layout_width="103dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#D32F2F"/>  <!-- RED -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="To establish, maintain and operate a National Identification Register and to issue National Identification Numbers and Cards to all persons registered in Uganda."
                    android:textColor="@color/gray_800"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Vision"
                    android:textColor="@color/uganda_red"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>
                <!-- The red underline bar -->
                <View
                    android:layout_width="103dp"
                    android:layout_height="3dp"
                    android:layout_marginTop="4dp"
                    android:background="#D32F2F"/>  <!-- RED -->

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="A credible and secure National Identification Register for all persons in Uganda."
                    android:textColor="@color/gray_800"
                    android:textSize="14sp"
                    android:gravity="center"
                    android:lineSpacingExtra="4dp"/>
            </LinearLayout>

            <!-- Services Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Our Services"
                    android:textColor="@color/uganda_red"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="• National ID Registration"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="• ID Renewal Services"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="• ID Replacement"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="• Birth Registration"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="• Death Registration"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="• Change of Details"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>
                </LinearLayout>

            </LinearLayout>

            <!-- Contact Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Contact Information"
                    android:textColor="@color/uganda_red"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Headquarters"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Plot 2, Bombo Road\nWandegeya, Kampala\nUganda"
                    android:textColor="@color/gray_800"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Phone:"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="0414-349000"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Email:"
                        android:textColor="@color/text_primary"
                        android:textSize="14sp"
                        android:textStyle="bold"/>

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="info@nira.go.ug"
                        android:textColor="@color/gray_800"
                        android:textSize="14sp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btnCallHeadquarters"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Call"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:padding="12dp"
                        android:background="@color/gray_200"
                        android:textColor="@color/primary_color"/>

                    <Button
                        android:id="@+id/btnEmailSupport"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Email"
                        android:textStyle="bold"
                        android:textSize="14sp"
                        android:padding="12dp"
                        android:background="@color/gray_200"
                        android:textColor="@color/primary_color"/>
                </LinearLayout>

            </LinearLayout>

            <!-- App Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp"
                android:layout_marginBottom="16dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="About NIRA Connect App"
                    android:textColor="@color/uganda_red"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NIRA Connect is the official mobile application for National ID services in Uganda. The app provides convenient access to various identification services from anywhere, anytime."
                    android:textColor="@color/gray_800"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Key Features:"
                    android:textColor="@color/text_primary"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Apply for National ID online\n• Renew your National ID\n• Replace lost/damaged ID\n• Check application status\n• 24/7 customer support\n• Secure and encrypted data"
                    android:textColor="@color/gray_800"
                    android:textSize="14sp"
                    android:lineSpacingExtra="4dp"
                    android:layout_marginBottom="12dp"/>

                <Button
                    android:id="@+id/btnVisitWebsite"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Visit Official Website"
                    android:textSize="14sp"
                    android:padding="10dp"
                    android:textStyle="bold"
                    android:background="@color/gray_200"
                    android:textColor="@color/primary_color"/>

            </LinearLayout>

            <!-- Legal Information Card -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/white"
                android:padding="20dp"
                android:elevation="4dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Legal Information"
                    android:textColor="@color/uganda_red"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_marginBottom="12dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="16dp">

                    <Button
                        android:id="@+id/btnViewPrivacyPolicy"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:text="Privacy Policy"
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@color/gray_200"
                        android:textColor="@color/primary_color"/>

                    <Button
                        android:id="@+id/btnViewTerms"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:text="Terms of Service"
                        android:textSize="14sp"
                        android:padding="10dp"
                        android:textStyle="bold"
                        android:background="@color/gray_200"
                        android:textColor="@color/primary_color"/>
                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="© 2024 National Identification and Registration Authority. All rights reserved."
                    android:textColor="@color/gray_800"
                    android:textSize="12sp"
                    android:gravity="center"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>